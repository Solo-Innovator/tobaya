<% if @carts.present? %>
  <div class="container">
    <div class="row">
      <div class="col">
        <div class="d-flex">
          <h4 class="mr-auto">ショッピングカート</h4>
          <%= link_to "カートを空にする", destroy_all_carts_path, method: :delete, data: { confirm: "本当によろしいですか？"}, class:"btn btn-danger" %>
        </div>
        <table class="table table-bordered">
          <thead class="bg-light">
            <tr>
              <th>商品名</th>
              <th>単価(税込)</th>
              <th>数量</th>
              <th>小計</th>
              <th></th>
            </tr>
          </thead>
          <% @carts.each do |cart| %>
            <tr>
              <td>
                <%= link_to item_path(cart.item) do %>
                  <%= image_tag cart.item.image, size: "50x30" %>
                  <%= cart.item.name %>
                <% end %>
              </td>
              <td>¥<%= cart.item.with_tax_price.to_s(:delimited) %></td>
              <td>
                <%= form_with model: cart do |f| %>
                  <%= f.select :quantity, 1..10, {} %>
                  <%= f.submit "変更", class: "btn btn-success" %>
                <% end %>
              </td>
              <td>¥<%= cart.subtotal.to_s(:delimited) %></td>
              <td><%= link_to "削除する", cart_path(cart), method: :delete, data: { confirm: "本当によろしいですか？"}, class:"btn btn-danger" %></td>
            </tr>
          <% end %>
        </table>
        <%= link_to "買い物を続ける", items_path, class:"btn btn-primary" %>
        <div class="d-flex justify-content-end">
        <table class="table table-bordered col-3">
          <tr>
            <td class="bg-light">合計金額</td>
            <td>¥<%= @total.to_s(:delimited) %></td>
          </tr>
        </table>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="mx-auto my-5">
        <%= link_to "情報入力に進む", "#", class:"btn btn-success" %>
      </div>
    </div>
  </div>
  <% else %>
    <h4 class="my-5">カート内に商品はありません</h4>
    <%= link_to "買い物を続ける", items_path, class:"btn btn-primary" %>
  <% end %>