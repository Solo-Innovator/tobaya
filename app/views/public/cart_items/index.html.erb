<div class="container">
  <div class="row">
    <% if @cart_items.blank? %>
      <h4 class="my-5">カート内に商品はありません</h4>
    <% else %>
      <div class="col">
        <div class="row">
          <h4 class="mr-auto">ショッピングカート</h4>
        </div>
        <div class="row justify-content-end">
          <div class="col-md-2">
            <%= link_to "カートを空にする", destroy_all_cart_items_path, method: :delete, data: { confirm: "本当によろしいですか？"}, class:"btn btn-danger" %>
          </div>
        </div>
      </div>
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @cart_items.each do |cart_item| %>
            <tr>
              <td>
                <%= link_to item_path(cart_item.item) do %>
                  <%= image_tag cart_item.item.image, size: "100x100" %>
                  <%= cart_item.item.name %>
                <% end %>
              </td>
              <td>¥<%= cart_item.item.with_tax_price.to_s(:delimited) %></td>
              <td>
                <%= form_with model: cart_item do |f| %>
                  <%= f.select :quantity, 1..50, {} %>
                  <%= f.submit "変更", class: "btn btn-success" %>
                <% end %>
              </td>
              <td>¥<%= cart_item.subtotal.to_s(:delimited) %></td>
              <td><%= link_to "削除する", cart_item_path(cart_item), method: :delete, data: { confirm: "本当によろしいですか？"}, class:"btn btn-danger" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      </div>
      </div>
      
    <div class="container">
      <div class="row">
        <div class="col-md-3 ml-5">
          <%= link_to "買い物を続ける", items_path, class:"btn btn-primary" %>
        </div>
        <div class="col-md-4 offset-4">
          <table class="table table-bordered">
            <tbody>
              <tr>
                <th>合計金額</th>
                <td>¥<%= @total_amount.to_s(:delimited) %></td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
      <div class="row justify-content-center mt-3">
        <div class="col-md-3">
          <%= link_to "情報入力に進む", new_order_path, class:"btn btn-success" %>
        </div>
      </div>
      <% end %>
    </div>
