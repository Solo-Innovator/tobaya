<h4 class="mt-5">注文情報確認</h4>
<div class="containter">
  <div class="row">
    <div class="col-md-8">
      
      
      <table class="table table-bordered">
        <thead class="bg-light">
          <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
          </tr>
        </thead>
        <% total = 0 %>
        <% @cart_items.each do |cart_item| %>
          <tr>
            <td>
              <%= link_to item_path(cart_item.item) do %>
                <%= image_tag cart_item.item.image, size: "50x30" %>
                <%= cart_item.item.name %>
              <% end %>
            </td>
            <td><%= cart_item.item.price.to_s(:delimited) %></td>
            <td><%= cart_item.quantity %></td>
            <td><%= cart_item.subtotal.to_s(:delimited) %></td>
          </tr>
          <% total += cart_item.subtotal %>
        <% end %>
      </table>
      
      <h5><b>支払方法</b></h5>
      <%= @order.payment_method_i18n %>
      
      <h5><b>お届け先</b></h5>
      〒<%= @order.postcode %>
      <%= @order.address %><br>
      <%= @order.name %>
    </div>
    
    <div class="col-md-3 offset-1">
      <table class="table table-bordered">
        <tr>
          <th class="bg-ligtht">送料</th>
          <td><%= @order.shipping_fee.to_s(:delimited) %></td>
        </tr>
        
        <tr>
          <th class="bg-light">商品合計</th>
          <td><%= total.to_s(:delimited) %></td>
        </tr>
        
        <tr>
          <th class="bg-light">請求金額</th>
          <% @order.total_amount = @order.shipping_fee + total.to_i %>
          <td><%= @order.total_amount.to_s(:delimited) %></td>
        </tr>
      </table>
    </div>
  </div>
  <div class="text-center my-5">
    <%= form_with model: @order, url: orders_path, method: :post do |f| %>
      <%= f.hidden_field :customer_id %>
      <%= f.hidden_field :name %>
      <%= f.hidden_field :postcode %>
      <%= f.hidden_field :address %>
      <%= f.hidden_field :shipping_fee %>
      <%= f.hidden_field :payment_method %>
      <%= f.hidden_field :total_amount %>
      <%= f.submit "注文を確定する", class:"btn btn-success" %>
    <% end %>
  </div>
</div>