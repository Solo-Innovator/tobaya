<div class="container">
  <div class="row">
    <div class="col">
      <h4>注文履歴一覧</h4>
      <table class="table table-bordered">
        <thead class="bg-light">
          <tr>
            <th>注文日</th>
            <th>配送先</th>
            <th>注文商品</th>
            <th>支払金額</th>
            <th>ステータス</th>
            <th>注文詳細</th>
          </tr>
        </thead>
        <% @orders.each do |order| %>
          <tr>
            <th><%= l order.created_at, format: :short %></th>
            <th>
              〒<%= order.postcode %><br>
              <%= order.address %><br>
              <%= order.name %>
            </th>
            <th>
              <% order.order_details.each do |order_detail| %>
                <%= order_detail.item.name %><br>
              <% end %>
            </th>
            <th>¥<%= order.total_amount.to_s(:delimited) %></th>
            <th></th>
            <th><%= link_to '表示する', order_path(order), class:"btn btn-primary" %></th>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>