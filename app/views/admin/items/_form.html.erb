<%= form_with model: [:admin, item] do |f| %>
  <table class="table table-borderless">
    <tbody>
      <tr>
        <td>商品画像</td>
        <td><%= f.file_field :image %></td>
      </tr>

      <tr>
        <td>商品名</td>
        <td><%= f.text_field :name, placeholder: "商品名" %></td>
      </tr>

      <tr>
        <td>商品説明</td>
        <td><%= f.text_area :introduction, placeholder: "ここに説明文を記述します" %></td>
      </tr>

      <tr>
        <td>ジャンル</td>
        <td><%= f.select :"#", { include_blank: "--選択してください--"}, {}%></td>
      </tr>

      <tr>
        <td>税抜価格</td>
        <td><%= f.text_field :price, placeholder: "1000" %></td>
      </tr>

      <tr>
        <td>販売ステータス</td>
        <td>
          <%= f.radio_button :is_available, true, checked: true %>
          <%= f.label :is_available, "販売中", value: true %>

          <%= f.radio_button :is_available, false %>
          <%= f.label :is_available, "販売停止中", value: false %>
        </td>
      </tr>
    </tbody>
  </table>

  <%#<%= if current_page?(new_admin_item_path) %>
    <%= f.submit "新規登録", class: "btn btn-success" %>
  <%#<% else %>
    <%= f.submit "変更を保存", class: "btn btn-success" %>
  <%#<% end %>

<% end %>